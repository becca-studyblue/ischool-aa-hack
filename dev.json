{
  "source": "src",
  "destination": "www",
  "plugins": {
    
    "metalsmith-layouts": {
      "engine": "handlebars",
      "default": "default.html",
      "pattern": "**/*.html"
    },
    
    "metalsmith-ignore": [
      "**/[!index].js",
      "**/[!index].css"
    ],
    
    "metalsmith-browserify": {
      "dest": "www/index.js",
      "entries": ["src/index.js"],
      "sourcemaps": true,
      "watch": true,
      "transform": ["babelify"]
    },
    
    "metalsmith-with-postcss": {
      "plugins": {
        "postcss-import": {},
        "autoprefixer": {}
      }
    },
    
    "metalsmith-watch": {
      "paths": {
        "${source}/**/*.html": "**/*.html",
        "${source}/**/*.css": "**/*.css",
        "${source}/**/*.js": "**/*.js"
      }
    },
    "metalsmith-serve": {}
  }
}